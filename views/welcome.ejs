<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to My App</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: white;
            overflow: hidden;
            font-family: 'Arial', sans-serif;
        }
        
        .container {
            text-align: center;
            position: relative;
        }
        
        .logo {
            width: 200px;
            height: 200px;
            opacity: 0;
            transform: scale(0.5);
            transition: all 0.5s ease-out;
            object-fit: contain; /* Ensures the SVG maintains its aspect ratio */
        }
        
        .loading-text {
            margin-top: 20px;
            opacity: 0;
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }
        
        .ripple {
            position: absolute;
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background-color: rgba(81, 255, 0, 0.1);
            transform: scale(0);
            opacity: 0;
            top: 0;
            left: 50%;
            margin-left: -100px;
        }
        
        .particles {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }
        
        .particle {
            position: absolute;
            width: 8px;
            height: 8px;
            background-color: rgba(0, 255, 0, 0.6);
            border-radius: 50%;
            opacity: 0;
        }
        
        .progress {
            width: 200px;
            height: 4px;
            background-color: #eee;
            border-radius: 2px;
            margin: 20px auto 0;
            overflow: hidden;
            opacity: 0;
        }
        
        .progress-bar {
            height: 100%;
            width: 0%;
            background-color: #35ff72;
            transition: width 0.2s ease-out;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="ripple" id="ripple1"></div>
        <div class="ripple" id="ripple2"></div>
        <div class="ripple" id="ripple3"></div>
        
        <!-- Replace "path/to/your-logo.svg" with the actual path to your SVG file -->
        <img src="/images/FLORAWY-15.svg" class="logo" id="logo" alt="App Logo">
        
        <div class="loading-text" id="loading-text">Loading your experience...</div>
        <div class="progress" id="progress">
            <div class="progress-bar" id="progress-bar"></div>
        </div>
        
        <div class="particles" id="particles"></div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Elements
            const logo = document.getElementById('logo');
            const loadingText = document.getElementById('loading-text');
            const ripple1 = document.getElementById('ripple1');
            const ripple2 = document.getElementById('ripple2');
            const ripple3 = document.getElementById('ripple3');
            const progress = document.getElementById('progress');
            const progressBar = document.getElementById('progress-bar');
            const particlesContainer = document.getElementById('particles');
            
            // Create particles
            for (let i = 0; i < 30; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                particlesContainer.appendChild(particle);
            }
            
            const particles = document.querySelectorAll('.particle');
            
            // Animation sequence
            setTimeout(() => {
                // Show logo with scaling animation
                logo.style.opacity = '1';
                logo.style.transform = 'scale(2)';
                
                // Start ripple animations
                animateRipple(ripple1, 300);
                setTimeout(() => animateRipple(ripple2, 600), 300);
                setTimeout(() => animateRipple(ripple3, 900), 600);
                
                // Show loading text
                setTimeout(() => {
                    loadingText.style.opacity = '1';
                    loadingText.style.transform = 'translateY(0)';
                }, 500);
                
                // Show progress bar
                setTimeout(() => {
                    progress.style.opacity = '1';
                    animateProgressBar();
                }, 800);
                
                // Animate particles
                setTimeout(() => {
                    animateParticles();
                }, 1500);
                
                // Redirect after animation completes
                setTimeout(() => {
                    // Final animation before redirect
                    logo.style.transform = 'scale(1.2)';
                    logo.style.opacity = '0';
                    loadingText.style.opacity = '0';
                    progress.style.opacity = '0';
                    
                    // Redirect to home page
                    setTimeout(() => {
                        window.location.href = '/home';
                    }, 700);
                }, 5000);
            }, 500);
            
            // Functions
            function animateRipple(element, duration) {
                element.style.transition = `transform ${duration}ms ease-out, opacity ${duration}ms ease-out`;
                element.style.opacity = '0.8';
                element.style.transform = 'scale(3)';
                
                setTimeout(() => {
                    element.style.opacity = '0';
                }, duration - 100);
            }
            
            function animateProgressBar() {
                let width = 0;
                const interval = setInterval(() => {
                    width += 2;
                    progressBar.style.width = `${width}%`;
                    
                    if (width >= 100) {
                        clearInterval(interval);
                    }
                }, 80);
            }
            
            function animateParticles() {
                particles.forEach((particle, index) => {
                    // Random position around the logo
                    const angle = Math.random() * Math.PI * 2;
                    const distance = 50 + Math.random() * 100;
                    const x = Math.cos(angle) * distance;
                    const y = Math.sin(angle) * distance;
                    
                    // Set initial position
                    particle.style.left = '50%';
                    particle.style.top = '50%';
                    particle.style.transform = 'translate(-50%, -50%)';
                    
                    // Random size
                    const size = 3 + Math.random() * 5;
                    particle.style.width = `${size}px`;
                    particle.style.height = `${size}px`;
                    
                    // Random color variation
                    const hue = 210 + Math.random() * 40;
                    particle.style.backgroundColor = `hsla(${hue}, 100%, 50%, 0.8)`;
                    
                    // Animate with delay
                    setTimeout(() => {
                        particle.style.opacity = '1';
                        particle.style.transition = `transform 1.5s ease-out, opacity 1.5s ease-out`;
                        particle.style.transform = `translate(calc(-50% + ${x}px), calc(-50% + ${y}px))`;
                        
                        // Fade out
                        setTimeout(() => {
                            particle.style.opacity = '0';
                        }, 800);
                    }, index * 50);
                });
            }
        });
    </script>
</body>
</html>